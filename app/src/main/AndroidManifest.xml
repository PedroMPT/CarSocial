<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ismai.pedro.needarideapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".StarterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/share"
        android:label="@string/app_name"
        android:logo="@mipmap/share"
        android:roundIcon="@mipmap/share"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD_rFRqKspnWo1BQaYBbIDxgbq7cJQlxf8" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity
            android:name=".Activities.UserActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".Activities.MyProfileActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.OfferActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.FromActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.TripDataActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.TimeTripActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.PriceActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ListOfRidesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.SeatsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.ForgotPasswordActivity" />
        <activity
            android:name=".Activities.RideFromActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>